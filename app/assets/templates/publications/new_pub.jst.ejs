<form class="new-pub">

  <div class="pub-header-setter">
    <button id="align-left" class="style"><i class="fa fa-align-left"></i></button>
    <button id="align-right" class="style"><i class="fa fa-align-center"></i></button>
    <button id="pub-header-image" class="style"><i class="fa fa-image"></i></button>
  </div>
  <br>
  <button id="pub-icon" class="style"><i class="fa fa-camera fa-3x"></i></button>
  <h1><input type="text" name="publication[title]" placeholder="Optional heading"></h1>
  <h3><input type="text" name="publication[description]" placeholder="Optional description"></h3>

  <select id="editors">
      <option value="">Add an Editor</option>
      <% users.forEach( function(user) { %>
      <option value="<%= user.id %>"><%= user.escape('email') %></option>
      <% }) %>
  </select>
  <select id="writers">
      <option value="">Add a Writer</option>
      <% users.forEach( function(user) { %>
      <option value="<%= user.id %>"><%= user.escape('email') %></option>
      <% }) %>
  </select>

  <br>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
<br>

<div class="pub-sections">
  <button id="add-section">+</button>
</div>
