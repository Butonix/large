<li class="preview">
  <% if (pub !== undefined) { %>
    <a href="#/publications/<%= pub.id %>"><strong><%= pub.escape('title') %></strong></a><br>
    <a style="color:rgba(128, 128, 128, 0.5)" href="#/users/<%= author.id %>"><%= author.escape('email') %></a> -
    <a style="color:rgba(128, 128, 128, 0.5)" href="#/stories/<%= story.id %>">
      <abbr class="timeago" title="<%= story.get('created_at') %>"><%= story.get('created_at') %></abbr>
    </a>
  <% } else { %>
  <a href="#/users/<%= author.id %>"><%= author.escape('email') %></a><br>
  <a style="color:rgba(128, 128, 128, 0.5)" href="#/stories/<%= story.id %>">
    <abbr class="timeago" title="<%= story.get('created_at') %>"><%= story.get('created_at') %></abbr>
  </a>
  <% } %>
  <% if (story.get('header_image') !== null) { %>
    <br>
  <div class="img-container">
    <img src="<%= story.get('header_image') %>">
  </div>
  <% } %>
  <div class="sub-preview">
    <h2><%= story.escape('title') %><h2>
    <h3><%= story.escape('subtitle') %></h3>
    <div style="font-family:serif;"><%= sentence %>...
    </div>
    <br>
    <a href="#/stories/<%= story.id %>">Continue reading</a>
  <div>
</li>
