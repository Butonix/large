<li class="preview">
  <% if (pub !== undefined) { %>
    <a href="#/publications/<%= pub.id %>"><strong><%= pub.escape('title') %></strong></a><br>
    <a style="color:rgba(128, 128, 128, 0.5)" href="#/users/<%= author.id %>"><%= author.escape('email') %></a> -
    <a style="color:rgba(128, 128, 128, 0.5)" href="#/stories/<%= story.id %>">
      <abbr class="timeago" title="<%= story.get('created_at') %>"><%= story.get('created_at') %></abbr>
    </a>
  <% } else { %>
  <a href="#/users/<%= author.id %>"><%= author.escape('email') %></a><br>
  <a style="color:rgba(128, 128, 128, 0.5)" href="#/stories/<%= story.id %>">
    <abbr class="timeago" title="<%= story.get('created_at') %>"><%= story.get('created_at') %></abbr>
  </a>
  <% } %>
  <% if (story.get('header_image') !== null) { %>
    <br>
  <div class="img-container">
    <a href="#/stories/<%= story.id %>">
      <img src="<%= story.get('header_image') %>">
    </a>
  </div>
  <% } %>
  <div class="sub-preview">
    <% if (story.get('story_id') === null) { %>
      <a style="color:black;" href="#/stories/<%= story.id %>">
        <h2><%= story.escape('title') %><h2>
        <h3 style="margin-top:-10px;"><%= story.escape('subtitle') %></h3>
      </a>
      <% if (sentence !== "") { %>
        <a style="color:black;" href="#/stories/<%= story.id %>">
          <div style="font-family:serif;font-size:20px; padding-top:15px;">
            <%= sentence %>...
          </div>
        </a>
      <% } %>
      <br>
      <a href="#/stories/<%= story.id %>">Continue reading</a>
    <% } else { %>
      <div style="color:rgba(128, 128, 128, 0.7)">
        <i class="fa fa-comment-o"></i>
        in response to
        <a style="color:rgba(128, 128, 128, 0.7); text-decoration:underline;"
           href="#/stories/<%= story.get('story_id') %>">
          <%= story.escape('title') %>
        </a>
      </div>
      <br>
      <div style="font-family:serif;font-size:20px;">
        <a style="color:black;" href="#/stories/<%= story.id %>">
        <%= sentence %>...
        </a>
      </div>
      <br>
      <a href="#/stories/<%= story.id %>">Continue reading</a>
      <% } %>
  <div>
</li>
