<div class="image"></div>
<br>
<div style="margin-left:150px;font-size:30px;font-family:serif;font-style:italic;color:rgba(128, 128, 128, 0.5);">
  Click on the editor to tell your story...
</div>
<div class="header-setter">
  <button id="header-imager"><i class="fa fa-ellipsis-h"></i></button><br>
  <button id="header-image"><i class="fa fa-image"></i></button>
</div>
<div class="new-story">
  <% if (story.get('body') === undefined) {%>
    <div class="editable">
      <p style="font-size:50px; font-weight:bold" id="title"><br></p>
      <p style="font-size:35px; font-style:italic;" id="subtitle"><br></p>
      <p><br></p>
    </div>
  <% } else { %>
    <div class="editable">
      <%= story.get('body') %>
    </div>
  <% } %>
  </div>
<br>

<div class="modal fade" id="confirmPublish" tabindex="-1" role="dialog" aria-labelledby="confirmPublishLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div style="text-align:center;" class="modal-header">
        <h3 class="modal-title" id="confirmPublishLabel">Ready to publish?</h3>
        <p>Change your story's title and subtitle as needed</p>
      </div>
      <div class="modal-body">
        <form id="confirm-form" class="confirm-form">
          <div class="form-group">
            <input id="modal-title" type="text" name="story[title]"><br>
          </div>
          <div class="form-group">
            <input id="modal-subtitle" type="text" name="story[subtitle]"><br>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <!-- <input type="text" form="confirm-form" placeholder="Add up to 3 tags"> -->
        <button id="submit-confirm" type="submit" class="btn btn-primary">Publish</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

</div>
